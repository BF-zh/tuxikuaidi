page{
--bg-height:5%;
--primary-color:#1fa4f0;
background-color: #f0f2f6;
color: #fff;
padding-bottom: 70px;
}
.round-bg{
  
  position: absolute;
  left: 50%;
  top: 0;
  z-index: -1;
  width: 4000rpx;
  height: 4000rpx;
  border-radius: 50%;
  transform: translate(-50%,calc((0% - 100%) + var(--bg-height)));
  background: var(--primary-color);
}